{% if children|length > 0 %}
    <ul class="d-md-flex mw-748px flex-wrap justify-content-center align-items-center d-none mx-auto pt-3 gap-2">
        {% for child in children %}
            <li class="px-0 position-relative">
                <a href="{{ child.url }}" class="py-4px px-18px fs-short-2 ff-semibold transition-color">
                    {{ child.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
