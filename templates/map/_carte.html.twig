{% if latitude and longitude %}

    <div id="openmap2" class="mt-3" style="width: 100%; height: 400px;"></div>

    <script type="text/javascript" defer>
        const latitude = '{{ latitude }}';
        const longitude = '{{ longitude }}';
        const center = [ latitude, longitude ];
        const mapMain = L.map( 'openmap2' )
            .setView( center, 15 );

        L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
            // Il est toujours bien de laisser le lien vers la source des donn√©es
            attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors',
            minZoom: 1,
            maxZoom: 20
        }).addTo(mapMain);

        L.marker(center, {title: '', draggable: true}).addTo(mapMain);

    </script>

{% endif %}
