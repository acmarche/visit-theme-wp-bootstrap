{% set found = false %}
{% for specInfo in offre.specsDetailed %}
    {% if specInfo.specData.urnCat is defined %}
        {% if specInfo.specData.urnCat == 'urn:cat:accueil' %}
            {% if specInfo.specData.value %}
                {% set found = true %}
            {% endif %}
        {% endif %}
    {% endif %}
{% endfor %}
{% if found == true %}
    <h4 class="text-success" style="font-size: 1rem;">{{ 'Accueils'|trans }}</h4>
    <hr>
    {% include 'offre/specifications/_list.html.twig' with {'urnkeyword': 'urn:cat:accueil'} %}
    <p></p>
{% endif %}